extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-sm-offset-3.col-md-offset-4
				h1.text-center.login-title itsGoinDown
				div.text-center.account-wall
					//- img(class='profile-img', src='images/osiris_logo.png')
					img( src='images/osiris_logo.png')
					form(class='form-signin', action='/login', method='POST')
						input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
						input(type='password', name='password' class='form-control', placeholder='Password', required)
						button(class='btn btn-lg btn-primary btn-block submit-btn', type='submit') Sign in
						span.clearfix
				.center.signup-link
					a(href='/signup') Create an account
				#message
				if message
					.text-center.error-message #{message}